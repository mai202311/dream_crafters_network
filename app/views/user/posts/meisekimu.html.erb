<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-of">
      <%= link_to '＜戻る',posts_path, class: "btn btn-sm btn-secondary" %>
    </div>
    <h2>明晰夢に関する投稿</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col"> | 投稿者</th>
          <th scope="col"> | 本文</th>
          <th scope="col"> | カテゴリー</th>
         </tr>
      </thead>
        <tbody>
          <% @posts.each do |t| %>
            <% if t.category == "meisekimu" %> 
            <td>
              <th><%= t.body %></th>
              <th><%= t.user.name %></th>
              <% end %>
            </td>
          <% end %>
        </tbody>
    </table>
  </div>
</div>

 <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"> | 投稿者</th>
      <th scope="col"> | 本文</th>
     </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= link_to post.body, post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-of">
      <%= link_to '＜戻る',posts_path, class: "btn btn-sm btn-secondary" %>
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
    </div>
    <div class="col-md-10 col-md-of">
      <h4>投稿を編集する</h4>
      <%= render 'user/posts/form', post: @post %>
    </div>
  </div>
</div>

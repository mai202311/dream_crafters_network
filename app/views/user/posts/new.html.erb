<div class='container'>
  <div class='row d-flex'>
    <div class='col-md-2'style='padding: 10px;'>
      <%= link_to "<ホームに戻る",posts_path, class: "btn btn-sm btn-secondary" %>
    </div>
    <div class="col-md-10 col-md-of">
      <h1>新規投稿</h1>
       <%= form_with model: @post do |f| %>
          <%= f.label :body, '本文' %></br>
          <%= f.text_area :body, class:'form-control' %></br>
          <div class="form_input">
            <%= f.select :category, [["夢日記", "dreams"], ["明晰夢", "meisekimu"], ["睡眠", "sleeps"],["その他", "others"]], include_blank: "カテゴリ選択" %>
        </div>
          <%= f.submit '新規作成', class: "btn btn-success mt-4" %>
      <% end %>
    </div>
  </div>
</div>



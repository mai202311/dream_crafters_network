<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-of">
      <%= link_to '＜戻る',posts_path, class: "btn btn-sm btn-secondary" %>
    </div>
    <h2>その他に関する投稿</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col"> | 投稿者</th>
          <th scope="col"> | 本文</th>
          <th scope="col"> | カテゴリー</th>
         </tr>
      </thead>
        <tbody>
          <tr>
            <% @posts.each do |t| %>
            <% if t.category == "others" %> 
            <th><%= t.body %></th>
            <th><%= t.name %></th>
            <% end %>
            <% end %>
          </tr>
        </tbody>
    </table>
  </div>
</div>
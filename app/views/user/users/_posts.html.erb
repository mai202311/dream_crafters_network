<table class="table table-bordered">
  <thead>
    <tr>
      <th>名前</th>
      <th>本文</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td> <!-- ユーザー名を表示 --></td>
        <td><%= link_to post.body, post_path(post.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
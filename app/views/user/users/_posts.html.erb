<table class="table table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>body</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to post.body, post_path(post.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
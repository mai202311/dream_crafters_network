<div class="container">
  <div class="row">
    <div class="col-mt-4 col-xs-12"style="padding: 10px;">
      <%= link_to '＜一覧画面に戻る',posts_path, class: "btn btn-sm btn-secondary" %>
    </div>
    <div class="col-sm-4 col-xs-12"style="padding: 10px;">
      <%= form_with model: @tag, local: true do |f| %>
  
        <%= f.label :name, 'カテゴリー名' %></br>
        <%= f.text_field :name, class:'form-control' %></br>
        <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
    <div class="col-sm-6 col-xs-12">
      <table>
        <thead>
          <tr>
            <th>
              | カテゴリー名
            <th>
            <th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td><%= tag.name %></td>
              <td><%= tag.created_at.to_s(:datetime_jp) %>作成</td>
              <td><%= link_to '編集', edit_tag_path(tag), class: 'btn-sm btn-primary' %></td>
              <td><%= link_to '削除', tag_path(tag), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-sm btn-danger' %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>